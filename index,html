            const nextJobless = getNextThursday(now);
            events.push({
                id: 'jobless',
                time: nextJobless,
                country: 'US',
                currency: 'USD',
                name: 'Unemployment Claims',
                impact: 'medium',
                forecast: '220K',
                previous: '221K',
                actual: null,
                description: 'РџРµСЂРІРёС‡РЅС‹Рµ Р·Р°СЏРІРєРё РЅР° РїРѕСЃРѕР±РёРµ РїРѕ Р±РµР·СЂР°Р±РѕС‚РёС†Рµ'
