    <script>
        // ============================================
        // Р“Р›РћР‘РђР›Р¬РќРћР• РЎРћРЎРўРћРЇРќРР•
        // ============================================
        const settings = {
            sound: true,
            notification: true,
            importantOnly: true
        };

        const analysisState = {
            technical: { score: 0, direction: 'neutral', factors: [] },
            news: { score: 0, direction: 'neutral', items: [] },
            calendar: { score: 0, direction: 'neutral', events: [] },
            total: { score: 0, direction: 'neutral' }
        };

        let lastSignal = null;
        let signalHistory = [];
        let historyData = [];
        let currentTf = 60;
        let useProxy = false;
        let autoUpdateInterval = null;
        let countdownInterval = null;
        let countdownSeconds = 30;
        let currentChart = null;
        let candleSeries = null;
        let lastCandleTime = 0;
        let allNews = [];
        let allCalendarEvents = [];
        let currentNewsFilter = 'all';
        let currentCalendarFilter = 'all';

        const TICKER = "SiH6";

        const tfMap = {
            1: 1, 10: 10, 60: 60, 240: 24, 1440: 'D', 10080: 'W'
        };

        // ============================================
        // Р—Р’РЈРљРћР’Р«Р• РЎРР“РќРђР›Р«
        // ============================================
        function playSignalSound(type) {
            if (!settings.sound) return;

            try {
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();

                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);

                const now = audioContext.currentTime;

                if (type === 'buy') {
                    oscillator.frequency.setValueAtTime(440, now);
                    oscillator.frequency.setValueAtTime(554, now + 0.1);
                    oscillator.frequency.setValueAtTime(659, now + 0.2);
                    gainNode.gain.setValueAtTime(0.3, now);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, now + 0.5);
                    oscillator.start(now);
                    oscillator.stop(now + 0.5);
                } else if (type === 'sell') {
                    oscillator.frequency.setValueAtTime(659, now);
                    oscillator.frequency.setValueAtTime(554, now + 0.1);
                    oscillator.frequency.setValueAtTime(440, now + 0.2);
                    gainNode.gain.setValueAtTime(0.3, now);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, now + 0.5);
                    oscillator.start(now);
                    oscillator.stop(now + 0.5);
                } else {
                    oscillator.frequency.setValueAtTime(523, now);
                    gainNode.gain.setValueAtTime(0.2, now);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, now + 0.2);
                    oscillator.start(now);
                    oscillator.stop(now + 0.2);
                }
            } catch (e) {
                console.log('Audio not available');
            }
        }

        // ============================================
        // РЈР’Р•Р”РћРњР›Р•РќРРЇ
        // ============================================
        function showNotification(signal, price, reason, confidence) {
            if (settings.importantOnly && signal === 'Р”Р•Р Р–РђРўР¬') return;

            const container = document.getElementById('notificationContainer');

            const icons = {
                'РџРћРљРЈРџРљРђ': '',
                'РџР РћР”РђР–Рђ': '',
                'Р”Р•Р Р–РђРўР¬': 'вЏёпёЏ'
            };

            const titles = {
                'РџРћРљРЈРџРљРђ': 'РЎРёРіРЅР°Р» РЅР° РџРћРљРЈРџРљРЈ',
                'РџР РћР”РђР–Рђ': 'РЎРёРіРЅР°Р» РЅР° РџР РћР”РђР–РЈ',
                'Р”Р•Р Р–РђРўР¬': 'РЎРёРіРЅР°Р» Р”Р•Р Р–РђРўР¬'
            };

            const notification = document.createElement('div');
            notification.className = `notification ${signal === 'РџРћРљРЈРџРљРђ' ? 'buy' : signal === 'РџР РћР”РђР–Рђ' ? 'sell' : ''}`;
            notification.innerHTML = `
                <div class="notification-icon">${icons[signal]}</div>
                <div class="notification-content">
                    <div class="notification-title">${titles[signal]} (${confidence}%)</div>
                    <div class="notification-text">Р¦РµРЅР°: ${price.toFixed(2)} | ${reason.substring(0, 60)}...</div>
                </div>
                <button class="notification-close" onclick="this.parentElement.remove()">Г—</button>
            `;

            setTimeout(() => {
                if (notification.parentElement) {
                    notification.style.opacity = '0';
                    notification.style.transform = 'translateX(100%)';
                    setTimeout(() => notification.remove(), 300);
                }
            }, 10000);

            container.appendChild(notification);
            playSignalSound(signal === 'РџРћРљРЈРџРљРђ' ? 'buy' : signal === 'РџР РћР”РђР–Рђ' ? 'sell' : 'hold');

            addToSignalHistory(signal, price, confidence);
        }

        function addToSignalHistory(signal, price, confidence) {
            const now = new Date();
            const timeStr = now.toLocaleTimeString('ru-RU', { hour: '2-digit', minute: '2-digit' });

            signalHistory.unshift({
                time: timeStr,
                signal: signal,
                price: price,
                confidence: confidence,
                timestamp: now.getTime()
            });

            if (signalHistory.length > 20) {
                signalHistory = signalHistory.slice(0, 20);
            }

            updateSignalHistoryUI();
        }

        function updateSignalHistoryUI() {
            const container = document.getElementById('signalHistory');

            if (signalHistory.length === 0) {
                container.innerHTML = '<div style="text-align: center; color: #8b949e; font-size: 12px; padding: 20px;">РСЃС‚РѕСЂРёСЏ РїСѓСЃС‚Р°</div>';
                return;
            }

            container.innerHTML = signalHistory.map(item => `
                <div class="signal-history-item ${item.signal === 'РџРћРљРЈРџРљРђ' ? 'buy' : item.signal === 'РџР РћР”РђР–Рђ' ? 'sell' : 'hold'}">
                    <span class="signal-history-time">${item.time}</span>
                    <span class="signal-history-signal">${item.signal}</span>
                    <span class="signal-history-price">${item.price.toFixed(2)}</span>
                </div>
            `).join('');
        }

        // ============================================
        // РўР•РҐРќРР§Р•РЎРљРР™ РђРќРђР›РР—
        // ============================================
        function calculateTechnicalAnalysis(data) {
            if (!data || data.length < 50) {
                return { score: 0, direction: 'neutral', factors: [] };
            }

            const closes = data.map(d => d.close);
            const factors = [];
            let totalScore = 0;

            // RSI
            const rsi = calculateRSI(closes, 14);
            const lastRsi = rsi[rsi.length - 1];
            
            let rsiScore = 0;
            let rsiDirection = 'neutral';
            if (lastRsi < 30) {
                rsiScore = 30;
                rsiDirection = 'bullish';
                factors.push({ name: 'RSI РїРµСЂРµРїСЂРѕРґР°РЅ', score: 30, direction: 'bullish' });
            } else if (lastRsi > 70) {
                rsiScore = -30;
                rsiDirection = 'bearish';
                factors.push({ name: 'RSI РїРµСЂРµРєСѓРїР»РµРЅ', score: -30, direction: 'bearish' });
            } else if (lastRsi < 45) {
                rsiScore = 10;
                factors.push({ name: 'RSI Р±Р»РёР¶Рµ Рє РїРµСЂРµРїСЂРѕРґР°РЅРЅРѕСЃС‚Рё', score: 10, direction: 'bullish' });
            } else if (lastRsi > 55) {
                rsiScore = -10;
                factors.push({ name: 'RSI Р±Р»РёР¶Рµ Рє РїРµСЂРµРєСѓРїР»РµРЅРЅРѕСЃС‚Рё', score: -10, direction: 'bearish' });
            }
            totalScore += rsiScore;

            // MACD
            const macd = calculateMACD(closes);
            const lastMacd = macd.histogram[macd.histogram.length - 1];
            const prevMacd = macd.histogram[macd.histogram.length - 2];

            let macdScore = 0;
            if (lastMacd > 0 && prevMacd <= 0) {
                macdScore = 25;
                factors.push({ name: 'MACD РїРµСЂРµСЃС‘Рє РЅРѕР»СЊ РІРІРµСЂС…', score: 25, direction: 'bullish' });
            } else if (lastMacd < 0 && prevMacd >= 0) {
                macdScore = -25;
                factors.push({ name: 'MACD РїРµСЂРµСЃС‘Рє РЅРѕР»СЊ РІРЅРёР·', score: -25, direction: 'bearish' });
            } else if (lastMacd > 0) {
                macdScore = 10;
                factors.push({ name: 'MACD РІС‹С€Рµ РЅСѓР»СЏ', score: 10, direction: 'bullish' });
            } else {
                macdScore = -10;
                factors.push({ name: 'MACD РЅРёР¶Рµ РЅСѓР»СЏ', score: -10, direction: 'bearish' });
            }
            totalScore += macdScore;

            // EMA
            const ema20 = calculateEMA(closes, 20);
            const ema50 = calculateEMA(closes, 50);
            const lastEma20 = ema20[ema20.length - 1];
            const lastEma50 = ema50[ema50.length - 1];
            const lastPrice = closes[closes.length - 1];

            let emaScore = 0;
            if (lastEma20 > lastEma50 && lastPrice > lastEma20) {
                emaScore = 20;
                factors.push({ name: 'Р¦РµРЅР° РІС‹С€Рµ EMA20 > EMA50', score: 20, direction: 'bullish' });
            } else if (lastEma20 < lastEma50 && lastPrice < lastEma20) {
                emaScore = -20;
                factors.push({ name: 'Р¦РµРЅР° РЅРёР¶Рµ EMA20 < EMA50', score: -20, direction: 'bearish' });
            } else if (lastPrice > lastEma20) {
                emaScore = 10;
                factors.push({ name: 'Р¦РµРЅР° РІС‹С€Рµ EMA20', score: 10, direction: 'bullish' });
            } else {
                emaScore = -10;
                factors.push({ name: 'Р¦РµРЅР° РЅРёР¶Рµ EMA20', score: -10, direction: 'bearish' });
            }
            totalScore += emaScore;

            // РўСЂРµРЅРґ РїРѕ РїРѕСЃР»РµРґРЅРёРј СЃРІРµС‡Р°Рј
            const recentCloses = closes.slice(-10);
            const trendUp = recentCloses.every((c, i) => i === 0 || c >= recentCloses[i-1] * 0.998);
            const trendDown = recentCloses.every((c, i) => i === 0 || c <= recentCloses[i-1] * 1.002);

            if (trendUp) {
                totalScore += 15;
                factors.push({ name: 'Р’РѕСЃС…РѕРґСЏС‰РёР№ С‚СЂРµРЅРґ', score: 15, direction: 'bullish' });
            } else if (trendDown) {
                totalScore -= 15;
                factors.push({ name: 'РќРёСЃС…РѕРґСЏС‰РёР№ С‚СЂРµРЅРґ', score: -15, direction: 'bearish' });
            }

            // РќРѕСЂРјР°Р»РёР·СѓРµРј score РѕС‚ -100 РґРѕ 100
            totalScore = Math.max(-100, Math.min(100, totalScore));

            let direction = 'neutral';
            if (totalScore > 20) direction = 'bullish';
            else if (totalScore < -20) direction = 'bearish';

            return {
                score: totalScore,
                direction: direction,
                factors: factors,
                rsi: lastRsi,
                macd: macd,
                ema20: lastEma20,
                ema50: lastEma50
            };
        }

        function calculateRSI(prices, period) {
            const rsi = [];
            let gains = 0, losses = 0;

            for (let i = 1; i <= period; i++) {
                const diff = prices[i] - prices[i - 1];
                if (diff > 0) gains += diff;
                else losses -= diff;
            }

            let avgGain = gains / period;
            let avgLoss = losses / period;

            rsi.push(100 - (100 / (1 + avgGain / avgLoss)));

            for (let i = period + 1; i < prices.length; i++) {
                const diff = prices[i] - prices[i - 1];
                avgGain = (avgGain * (period - 1) + (diff > 0 ? diff : 0)) / period;
                avgLoss = (avgLoss * (period - 1) + (diff < 0 ? -diff : 0)) / period;
                rsi.push(100 - (100 / (1 + avgGain / avgLoss)));
            }

            return rsi;
        }

        function calculateEMA(prices, period) {
            const ema = [];
            const multiplier = 2 / (period + 1);

            let sum = 0;
            for (let i = 0; i < period; i++) {
                sum += prices[i];
            }
            ema.push(sum / period);

            for (let i = period; i < prices.length; i++) {
                ema.push((prices[i] - ema[ema.length - 1]) * multiplier + ema[ema.length - 1]);
            }

            return ema;
        }

        function calculateMACD(prices) {
            const ema12 = calculateEMA(prices, 12);
            const ema26 = calculateEMA(prices, 26);

            const macdLine = [];
            for (let i = 0; i < ema12.length && i < ema26.length; i++) {
                macdLine.push(ema12[i] - ema26[i]);
            }

            const signalLine = calculateEMA(macdLine, 9);
            const histogram = [];

            for (let i = 0; i < macdLine.length && i < signalLine.length; i++) {
                histogram.push(macdLine[i] - signalLine[i]);
            }

            return { macdLine, signalLine, histogram };
        }

        // ============================================
        // Р­РљРћРќРћРњРР§Р•РЎРљРР™ РљРђР›Р•РќР”РђР Р¬ (Р Р•РђР›Р¬РќР«Р• Р”РђРќРќР«Р•)
        // ============================================

        // РР·РІРµСЃС‚РЅС‹Рµ СЂРµРіСѓР»СЏСЂРЅС‹Рµ СЃРѕР±С‹С‚РёСЏ (СЂР°СЃРїРёСЃР°РЅРёРµ РЅР° 2026)
        const KNOWN_EVENTS_2026 = {
            // РЎРЁРђ - РїРµСЂРІР°СЏ РїСЏС‚РЅРёС†Р° РєР°Р¶РґРѕРіРѕ РјРµСЃСЏС†Р° (NFP)
            'us_nfp': { name: 'Non-Farm Payrolls', country: 'US', currency: 'USD', impact: 'high' },
            // Р—Р°СЃРµРґР°РЅРёСЏ Р¤Р РЎ (РїСЂРёРјРµСЂРЅС‹Рµ РґР°С‚С‹ - СѓС‚РѕС‡РЅСЏР№С‚Рµ)
            'us_fomc': { name: 'FOMC Meeting', country: 'US', currency: 'USD', impact: 'high' },
            // Р РѕСЃСЃРёСЏ - Р·Р°СЃРµРґР°РЅРёСЏ Р¦Р‘ Р Р¤
            'ru_cbr': { name: 'РљР»СЋС‡РµРІР°СЏ СЃС‚Р°РІРєР° Р¦Р‘ Р Р¤', country: 'RU', currency: 'RUB', impact: 'high' },
            // РЎРЁРђ - РёРЅС„Р»СЏС†РёСЏ
            'us_cpi': { name: 'CPI РЎРЁРђ', country: 'US', currency: 'USD', impact: 'high' },
            'us_ppi': { name: 'PPI РЎРЁРђ', country: 'US', currency: 'USD', impact: 'medium' },
            // РЎРЁРђ - СЂРѕР·РЅРёС‡РЅС‹Рµ РїСЂРѕРґР°Р¶Рё
            'us_retail': { name: 'Retail Sales', country: 'US', currency: 'USD', impact: 'medium' },
            // РЎРЁРђ - Р’Р’Рџ
            'us_gdp': { name: 'GDP Advance', country: 'US', currency: 'USD', impact: 'high' },
            // Р РѕСЃСЃРёСЏ - РёРЅС„Р»СЏС†РёСЏ
            'ru_inflation': { name: 'РРЅС„Р»СЏС†РёСЏ Р Р¤', country: 'RU', currency: 'RUB', impact: 'high' },
            // PMI
            'us_manufacturing': { name: 'ISM Manufacturing', country: 'US', currency: 'USD', impact: 'medium' },
            'ru_manufacturing': { name: 'PMI РџСЂРѕРёР·РІРѕРґСЃС‚РІРµРЅРЅС‹Р№ Р Р¤', country: 'RU', currency: 'RUB', impact: 'medium' }
        };

        // Р“РµРЅРµСЂРёСЂСѓРµРј Р±Р»РёР¶Р°Р№С€РёРµ РёР·РІРµСЃС‚РЅС‹Рµ СЃРѕР±С‹С‚РёСЏ
        function generateUpcomingEvents() {
            const now = new Date();
            const events = [];

            // РћРїСЂРµРґРµР»СЏРµРј Р±Р»РёР¶Р°Р№С€СѓСЋ РїСЏС‚РЅРёС†Сѓ (NFP)
            const nextFriday = getNextFriday(now);
            const daysUntilFriday = Math.ceil((nextFriday - now) / (1000 * 60 * 60 * 24));

            // NFP - РїРµСЂРІР°СЏ РїСЏС‚РЅРёС†Р° РєР°Р¶РґРѕРіРѕ РјРµСЃСЏС†Р°
            events.push({
                id: 'nfp_1',
                time: nextFriday,
                country: 'US',
                currency: 'USD',
                name: 'Non-Farm Payrolls',
                impact: 'high',
                forecast: '~180K',
                previous: '151K',
                actual: null,
                description: 'NFP - Р·Р°РЅСЏС‚РѕСЃС‚СЊ РІ РЅРµСЃРµР»СЊСЃРєРѕС…РѕР·СЏР№СЃС‚РІРµРЅРЅРѕРј СЃРµРєС‚РѕСЂРµ РЎРЁРђ'
            });

            // Р—Р°СЃРµРґР°РЅРёРµ Р¤Р РЎ - РѕСЂРёРµРЅС‚РёСЂРѕРІРѕС‡РЅРѕ РєР°Р¶РґС‹Рµ 6 РЅРµРґРµР»СЊ
            const nextFOMC = getNextFOMC(now);
            events.push({
                id: 'fomc_1',
                time: nextFOMC,
                country: 'US',
                currency: 'USD',
                name: 'FOMC Meeting',
                impact: 'high',
                forecast: '4.50%',
                previous: '4.50%',
                actual: null,
                description: 'Р—Р°СЃРµРґР°РЅРёРµ РљРѕРјРёС‚РµС‚Р° РїРѕ РѕС‚РєСЂС‹С‚С‹Рј СЂС‹РЅРєР°Рј Р¤Р РЎ'
            });

            // Р‘Р»РёР¶Р°Р№С€РµРµ Р·Р°СЃРµРґР°РЅРёРµ Р¦Р‘ Р Р¤
            const nextCBR = getNextCBR(now);
            events.push({
                id: 'cbr_1',
                time: nextCBR,
                country: 'RU',
                currency: 'RUB',
                name: 'РљР»СЋС‡РµРІР°СЏ СЃС‚Р°РІРєР° Р¦Р‘ Р Р¤',
                impact: 'high',
                forecast: '21.00%',
                previous: '21.00%',
                actual: null,
                description: 'Р РµС€РµРЅРёРµ РїРѕ РєР»СЋС‡РµРІРѕР№ СЃС‚Р°РІРєРµ Р‘Р°РЅРєР° Р РѕСЃСЃРёРё'
            });

            // CPI РЎРЁРђ - РѕР±С‹С‡РЅРѕ 10-15 С‡РёСЃР»Р° РєР°Р¶РґРѕРіРѕ РјРµСЃСЏС†Р°
            const nextCPI = getNextCPI(now);
            if (nextCPI) {
                events.push({
                    id: 'cpi_us',
                    time: nextCPI,
                    country: 'US',
                    currency: 'USD',
                    name: 'CPI РЎРЁРђ (Рј/Рј)',
                    impact: 'high',
